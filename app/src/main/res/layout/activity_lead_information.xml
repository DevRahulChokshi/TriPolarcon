<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primaryTextColor">
        <android.support.v7.widget.Toolbar
            android:id="@+id/lead_info_toolbar"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ToolBarTheme"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/PopupTheme"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lead_info_toolbar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <ProgressBar
            android:id="@+id/progressBarLeadDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lead_information"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/textColorEarthquakeLocation"
            android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/linearCompanyData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtCompanyName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/company"
                    android:textColor="@color/textColorEarthquakeDetails"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txtCompanyNameData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textColorEarthquakeLocation"
                    android:text="@string/note_available"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearCompanyEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtUserEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/textColorEarthquakeDetails"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/email"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/txtUserEmailData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textColorEarthquakeLocation"
                    android:textStyle="bold"
                    android:text="@string/note_available"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearCompanyWebSite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtCompanyWebSite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/web_site"
                    android:textColor="@color/textColorEarthquakeDetails"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txtCompanyWebSiteData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textColorEarthquakeLocation"
                    android:textStyle="bold"
                    android:text="@string/note_available"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearCompanyPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtOfficePhoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/phone_no"
                    android:textColor="@color/textColorEarthquakeDetails"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txtOfficePhoneNumberData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textColorEarthquakeLocation"
                    android:textStyle="bold"
                    android:text="@string/note_available"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearCompanyAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/address"
                    android:textColor="@color/textColorEarthquakeDetails"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txtAddressData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textColorEarthquakeLocation"
                    android:textStyle="bold"
                    android:text="@string/note_available"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearCompanyFax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtFax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Fax_no"
                    android:textColor="@color/textColorEarthquakeDetails"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txtFaxData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textColorEarthquakeLocation"
                    android:textStyle="bold"
                    android:text="@string/note_available"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearCompanyPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtPersonName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Person_name"
                    android:textColor="@color/textColorEarthquakeDetails"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txtPersonNameData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textColorEarthquakeLocation"
                    android:textStyle="bold"
                    android:text="@string/note_available"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearCompanyNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtPersonNote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Person_note"
                    android:textColor="@color/textColorEarthquakeDetails"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txtPersonNoteData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textColorEarthquakeLocation"
                    android:textStyle="bold"
                    android:text="@string/note_available"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearEnquiryStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtEnquiryStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Enquiry_source"
                    android:textColor="@color/textColorEarthquakeDetails"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txtEnquiryStatusData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textColorEarthquakeLocation"
                    android:textStyle="bold"
                    android:text="@string/note_available"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtLeadInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/show_more"
                android:textAllCaps="false"
                android:background="@color/primaryTextColor"
                android:textColor="@color/primaryColor"
                android:layout_marginTop="10dp"/>
            </LinearLayout>
        </ScrollView>
</RelativeLayout>

