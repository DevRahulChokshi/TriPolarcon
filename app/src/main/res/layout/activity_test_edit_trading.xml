<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.ebc003.tripolarcon.app.activities.TestEditTrading">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trading_service"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/textColorEarthquakeLocation"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/linearTradingServiceData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtTradingServiceDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tradingDate"
                android:textColor="@color/textColorEarthquakeDetails"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/txtTradingServiceDateData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/textColorEarthquakeLocation"
                android:textStyle="bold"
                android:text="@string/note_available"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:padding="10dp"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearOrderDescriptionData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtTradingOrderDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tradingOrderDescription"
                android:textColor="@color/textColorEarthquakeDetails"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/txtOrderDescriptionData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/textColorEarthquakeLocation"
                android:textStyle="bold"
                android:text="@string/note_available"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:padding="10dp"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearAreaData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtTradingArea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tradingArea"
                android:textColor="@color/textColorEarthquakeDetails"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/txtProductAreaData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/textColorEarthquakeLocation"
                android:textStyle="bold"
                android:text="@string/note_available"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:padding="10dp"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearUnitDataData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtTradingUnitName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tradingUnit"
                android:textColor="@color/textColorEarthquakeDetails"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/txtProductUnitData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/textColorEarthquakeLocation"
                android:textStyle="bold"
                android:text="@string/note_available"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:padding="10dp"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearServiceSourceTypeData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtTradingServiceSourceType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tradingSourceType"
                android:textColor="@color/textColorEarthquakeDetails"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/txtServiceSourceTypeData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/textColorEarthquakeLocation"
                android:textStyle="bold"
                android:text="@string/note_available"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:padding="10dp"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearServiceRequirementRemarkData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtTradingServiceRequirementRemark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tradingRequirementRemark"
                android:textColor="@color/textColorEarthquakeDetails"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/txtServiceRequirementRemarkData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/note_available"
                android:textColor="@color/textColorEarthquakeLocation"
                android:textSize="15sp"
                android:background="#00000000"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearServiceAssignToData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtTradingServiceAssignTo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tradingAssignTo"
                android:textColor="@color/textColorEarthquakeDetails"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/txtServiceAssignToData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/textColorEarthquakeLocation"
                android:textStyle="bold"
                android:text="@string/note_available"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="#00000000"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearServiceGeneratedData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtServiceGeneratedTo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tradingGeneratedBy"
                android:textColor="@color/textColorEarthquakeDetails"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="#00000000"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/txtServiceGeneratedToData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/textColorEarthquakeLocation"
                android:text="@string/note_available"
                android:textStyle="bold"
                android:background="#00000000"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textSize="15sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="EDIT"/>
    </LinearLayout>
</ScrollView>
